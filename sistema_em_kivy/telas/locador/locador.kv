<locadorJanela>:
   orientation: 'vertical'
############################head################################################
   BoxLayout:
       
      size_hint: [1,.1] 
      # escala [0;1]
      spacing:5
      canvas.before:
         Color:
            rgba: (1,1,1,1)
         Rectangle:
            pos: self.pos
            size: self.size
         
      Spinner: 
        # O id  
         id: spinner_id 
         
        # Callback  
         on_text: root.spinner_clicked(spinner_id.text) 
         
        # initially text on spinner 
         text: "Locador"
  
         # total values on spinner 
         values: ["Corretor",  "locatario"] 
  
         # declaring size of the spinner 
         # and the position of it 
         size_hint: None, None
         size: 200, 50
         pos_hint:{'center_x':.5, 'top': 1}

####################################################################################

      BoxLayout: 
         size_hint: [6,1] 
         spacing:5
         canvas.before:
            Color:
               rgba: (.2,0,1,1)
            Rectangle:
               pos: self.pos
               size: self.size
         Label:
            text: spinner_id.text
       
            
############################body###########################################             
   BoxLayout:
      spacing:5 
      canvas.before:
         Color:
            rgba: (1,1,1,1)
         Rectangle:
            pos: self.pos
            size: self.size
###############################################################################        

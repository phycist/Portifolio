<entradaJanela>:
   orientation: 'vertical'
############################head################################################
   BoxLayout:
      size_hint: [1,.19] 
      # escala [0;1]
      spacing:5
      canvas.before:
         Color:
            rgba: (0,0,1,1)
         Rectangle:
            pos: self.pos
            size: self.size
         
      Spinner: 
        # O id  
         id: spinner_id_head 
         
        # Callback  
         on_text: root.spinner_clicked(spinner_id_head.text) 
         
        # initially text on spinner 
         text: "Corretor"
  
         # total values on spinner 
         values: ["Corretor", "locador", "locatario"] 
  
         # declaring size of the spinner 
         # and the position of it 
         size_hint: None, None
         size: 200, 40
         pos_hint:{'center_x':.5, 'top': 1}

####################################################################################

      BoxLayout: 
         size_hint: [6,1] 
         spacing:5
         canvas.before:
            Color:
               rgba: (0,0,1,1)
            Rectangle:
               pos: self.pos
               size: self.size
         Label:
            text: spinner_id_head.text
       
            
